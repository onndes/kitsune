{
  "name": "functions",
  "type": "module",
  "scripts": {
    "lint": "eslint \"src/**/*.{ts,tsx}\" --cache --max-warnings 0",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "predeploy:copy-next": "rm -rf .next && cp -R ../.next ./",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "lint:fix": "eslint --fix"
  },
  "engines": {
    "node": "20"
  },
  "main": "lib/index.js",
  "dependencies": {
    "@google-cloud/functions-framework": "^3.4.6",
    "axios": "^1.8.3",
    "firebase-admin": "^12.7.0",
    "firebase-functions": "^6.3.2",
    "kitsune": "file:..",
    "next": "^15.3.1",
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.26.1",
    "@typescript-eslint/parser": "^8.26.1",
    "eslint": "^9.22.0",
    "eslint-import-resolver-typescript": "^3.9.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jsdoc": "^50.6.3",
    "eslint-plugin-prettier": "^5.2.3",
    "firebase-functions-test": "^3.1.0",
    "prettier": "^3.5.3",
    "typescript": "^5.7.2"
  },
  "private": true,
  "eslintConfig": {
    "extends": [
      "next/core-web-vitals",
      "next/typescript",
      "plugin:prettier/recommended"
    ]
  },
  "functions": {
    "source": "functions",
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint",
      "npm --prefix \"$RESOURCE_DIR\" run build",
      "npm --prefix \"$RESOURCE_DIR\" run predeploy:copy-next"
    ]
  }
}
