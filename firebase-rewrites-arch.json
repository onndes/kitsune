{
  "hosting": {
    "source": ".",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "frameworksBackend": {
      "region": "europe-west4",
      "env": {
        "TELEGRAM_ORDER_BOT_KEY": "projects/onndesy-product/secrets/TELEGRAM_ORDER_BOT_KEY/versions/latest",
        "TELEGRAM_CHAT_ID": "projects/onndesy-product/secrets/TELEGRAM_CHAT_ID/versions/latest"
      }
    },
    "rewrites": [
      {
        "source": "/api/telegram/send-message",
        "function": {
          "functionId": "sendTelegramMessage",
          "region": "europe-west4"
        }
      }
    ]
  },
  "functions": {
    "source": "functions",
    "codebase": "default",
    "ignore": [
      "node_modules",
      ".git",
      "firebase-debug.log",
      "firebase-debug.*.log",
      "*.local"
    ],
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint",
      "npm --prefix \"$RESOURCE_DIR\" run build"
    ]
  }
}
