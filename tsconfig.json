{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": { "@/*": ["./*"] },
    "typeRoots": ["node_modules/@types", "types"],
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext", "webworker"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [{ "name": "next" }]

    // "noImplicitAny": true, // Требует явной типизации переменных вместо использования any
    // "strictNullChecks": true, // Проверяет, что значения null и undefined явно обрабатываются
    // "noUnusedParameters": true, // Выдаёт ошибку, если функция содержит неиспользуемые параметры
    // "noUnusedLocals": true, // Выдаёт ошибку, если локальная переменная не используется
    // "noImplicitReturns": true, // Требует, чтобы все пути внутри функции возвращали значение
    // "noFallthroughCasesInSwitch": true // Запрещает продолжение выполнения в следующем case без break
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "./styles/styles.d.ts",
    "service-worker.ts",
    "archive/aservice-worker.js"
  ],
  "exclude": ["node_modules"],
  "rules": {}
}
