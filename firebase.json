{
  "hosting": {
    "source": ".",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "frameworksBackend": {
      "region": "europe-central2"
    },
    "rewrites": [
      {
        "source": "/api/telegram/send-message",
        "function": {
          "functionId": "sendTelegramMessage",
          "region": "europe-central2"
        }
      },
      {
        "source": "**",
        "function": {
          "functionId": "nextServer",
          "region": "europe-central2"
        }
      }
    ]
  },
  
  "functions": {
    "source": "functions",
    "codebase": "default",
    "ignore": [
      "node_modules",
      ".git",
      "firebase-debug.log",
      "firebase-debug.*.log",
      "*.local"
    ],
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint",
      "npm --prefix \"$RESOURCE_DIR\" run build"
    ]
  }
}
